        android:layout_alignParentEnd="true"
        android:layout_marginStart="424dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="416dp"
        android:text="@string/init_word"
        android:textSize="25sp"
        android:textStyle="bold" />

